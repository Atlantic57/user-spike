{% extends 'base.twig' %}
{% set user = TimberUser(user) %}
{% set portrait = TimberImage(user.portrait) %}
{% block content %}

<form method="post"><div class="sp-pp">
  <div class="container">
    <h1>SitePoint</h1>
    <h2>Sign In</h2>
    <fieldset class="form-fieldset ui-input __first">
      <input name="login_username" type="text" value="" title="Username" class="" placeholder="" id="username"  required="required">
      <label for="username">
        <span data-text="Username">Username</span>
      </label>
    </fieldset>

    <fieldset class="form-fieldset ui-input __second">
      <input name='login_password' type='password' title="Password" value="" class="" placeholder="" id="password"  required="required">
      <label for="password">
        <span data-text="Password">Password</span>
      </label>
    </fieldset>

    <div class="form-footer">
       <input type='submit' name="login_submit" title="" class="btn" id="" value="Log In" >
    </div>
  </div>
</div></form>


{% endblock %}
